FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY service-a/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy proto and generate Python code
COPY proto/poc.proto ./proto/
RUN python -m grpc_tools.protoc -I./proto --python_out=. --grpc_python_out=. ./proto/poc.proto

# Copy application
COPY service-a/main.py .

# Expose ports
EXPOSE 8000 50051

CMD ["python", "main.py"]
